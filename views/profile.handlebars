{{#if posts.length}}
<section class="profile-body">
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <ul class="profile-post-list">
      <article class="post">
    <div class="title">
       <a href="/post/{{id}}">{{title}}</a>
    </div>
    <div class="meta">
        <strong>Posted by {{user.username}}</strong>
    </div>
    </article>
      <a href="/profile/edit/{{post.id}}" class="edit-link">Edit post</a>
    </ul>
    {{/each}}
  </ol>
  {{/if}}
  <div>
    <button type="submit"><a href="/profile/newpost" class="btn">Create New Post</a></button>
</div>
</section>


